<!-- Honors and Awards Section -->
{% if page.honors %}
  <h2><a href="#" style="color: inherit">honors &amp; awards</a></h2>
  <div class="honors-section">
    {% if page.honors.entries %}
      {% assign honors_entries = page.honors.entries | sort: 'year' | reverse %}
      <ul style="list-style: none; padding: 0; margin: 0;">
        {% for entry in honors_entries %}
          <li style="margin-bottom: 1rem;">
            <div style="display: flex; align-items: flex-start; gap: 1rem;">
              <span style="color: #999; font-size: 0.9rem; min-width: 3rem; margin-top: 0.1rem;">{{ entry.year }}</span>
              <div>
                <strong>{{ entry.title }}</strong>
                {% if entry.organization %}, {{ entry.organization }}{% endif %}
                {% if entry.level %} ({{ entry.level }}){% endif %}
                {% if entry.description %}
                  <div style="color: #666; font-size: 0.9rem; margin-top: 0.2rem;">{{ entry.description }}</div>
                {% endif %}
              </div>
            </div>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
{% endif %}
